<h1 class="col-xs-12 col-xs-offset-5">Users</h1>
<br /><br /><br /><br />

<% @users.each do |u| %>

<ul class="listing">
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <li class="username">
        <%= link_to gravatar_for(u, size: 60), user_path(u) %>
        <%= link_to u.username, user_path(u) %>
      </li>
      <br />
      <li><small><%= pluralize(u.articles.count, "article") %> posted</small></li>
    </div>
  </div>
</ul>

<% end %>
